<div class="jumbotron" style="min-height: 100vh">
    <h1 style="color: blue">Vista de Productos</h1>
    <% if(hayProductos) { %>
        <div class="table-responsive">
            <table class="table table-dark" style="vertical-align: middle">
                <tr> <th style="vertical-align: middle">Nombre</th> <th style="vertical-align: middle">Precio</th> <th style="vertical-align: middle">Foto</th> </tr>
                <% for (const producto in productos ) { %>
                <tr>
                    <td style="vertical-align: middle"> <%= productos[producto].title %> </td>
                    <td style="vertical-align: middle"> <%= productos[producto].price %> </td>
                    <td style="vertical-align: middle"> <img width="50" src=" <%= productos[producto].thumbnail %> " alt="not found"></td>
                </tr>
                <% } %>
            </table>
        </div>
    <% } else{ %> 
        <h3>"No se encontraron productos"</h3>
    <% }%>
</div>